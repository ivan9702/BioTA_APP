<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.startek.biota.app.fragments.FunctionListFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_2x">

            <ImageView
                android:id="@+id/imageViewLogo"
                android:src="@drawable/logo"
                android:layout_alignParentStart="true"
                style="@style/image_button" />

            <ImageView
                android:id="@+id/buttonBack"
                android:src="@drawable/button_back"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                style="@style/image_button" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="@dimen/margin_12x"
            android:paddingRight="@dimen/margin_12x">

            <TableLayout
                android:id="@+id/tableLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:weightSum="2">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:weightSum="3.0"
                    android:layout_weight="1.0">

                    <Button
                        android:id="@+id/buttonUserManager"
                        android:text="@string/buttonUserManager"
                        android:drawableTop="@drawable/icon_usermanager"
                        android:background="@drawable/button_green"
                        style="@style/function_list_button" />

                    <Button
                        android:id="@+id/buttonSyncData"
                        android:text="@string/buttonSyncData"
                        android:drawableTop="@drawable/icon_syncdata"
                        android:background="@drawable/button_orange"
                        style="@style/function_list_button" />

                    <Button
                        android:id="@+id/buttonLogging"
                        android:text="@string/buttonLogging"
                        android:drawableTop="@drawable/icon_logging"
                        android:background="@drawable/button_pink"
                        style="@style/function_list_button" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:weightSum="3.0"
                    android:layout_weight="1.0">

                    <Button
                        android:id="@+id/buttonSetting"
                        android:text="@string/buttonSetting"
                        android:drawableTop="@drawable/icon_setting"
                        android:background="@drawable/button_green"
                        style="@style/function_list_button" />

                    <Button
                        android:id="@+id/buttonFingerprint"
                        android:text="@string/buttonFingerprint"
                        android:drawableTop="@drawable/icon_fingerprint"
                        android:background="@drawable/button_orange"
                        style="@style/function_list_button" />

                    <Button
                        android:id="@+id/buttonDevice"
                        android:text="@string/buttonDevice"
                        android:drawableTop="@drawable/icon_device"
                        android:background="@drawable/button_pink"
                        style="@style/function_list_button" />

                </TableRow>

            </TableLayout>

        </RelativeLayout>

    </LinearLayout>

</FrameLayout>
