<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin_2x"
    android:background="@drawable/background"
    tools:context="com.startek.biota.app.fragments.FingerprintFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_2x">

            <ImageView
                android:id="@+id/imageViewLogo"
                android:src="@drawable/logo"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                style="@style/image_button" />

            <ImageView
                android:id="@+id/buttonBack"
                android:src="@drawable/button_back"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                style="@style/image_button" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <View
                android:id="@+id/anchor"
                android:layout_height="match_parent"
                android:layout_width="1dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_toStartOf="@+id/anchor"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/imageViewFingerprint"
                    android:src="@mipmap/fingerprint_screenshot"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_toEndOf="@+id/anchor"
                android:layout_height="match_parent">

                <TableLayout
                    android:id="@+id/tableLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:weightSum="8">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/labelDeviceId"
                            android:text="@string/labelDeviceId"
                            style="@style/fingerprint_header" />
                        <TextView
                            android:id="@+id/textViewDeviceId"
                            android:text="ds_device_id"
                            style="@style/fingerprint_item" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/labelCompanyId"
                            android:text="@string/labelCompanyId"
                            style="@style/fingerprint_header" />
                        <TextView
                            android:id="@+id/textViewCompanyId"
                            android:text="ds_co_id"
                            style="@style/fingerprint_item" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/labelVersion"
                            android:text="@string/labelVersion"
                            style="@style/fingerprint_header" />
                        <TextView
                            android:id="@+id/textViewVersion"
                            android:text="ds_ver"
                            style="@style/fingerprint_item" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/labelSpeed"
                            android:text="速度"
                            style="@style/fingerprint_header" />
                        <TextView
                            android:id="@+id/textViewSpeed"
                            android:text="ds_speed"
                            style="@style/fingerprint_item" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/labelCompany"
                            android:text="@string/labelCompany"
                            style="@style/fingerprint_header" />
                        <TextView
                            android:id="@+id/textViewCompany"
                            android:text="ds_co"
                            style="@style/fingerprint_item" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/labelAddress"
                            android:text="@string/labelAddress"
                            style="@style/fingerprint_header" />
                        <TextView
                            android:id="@+id/textViewAddress"
                            android:text="ds_addr"
                            style="@style/fingerprint_item" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/labelUpdatedtime"
                            android:text="@string/labelUpdatedtime"
                            style="@style/fingerprint_header" />
                        <TextView
                            android:id="@+id/textViewUpdatedtime"
                            android:text="ds_update"
                            style="@style/fingerprint_item" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/labelProduct"
                            android:text="@string/labelProduct"
                            style="@style/fingerprint_header" />
                        <TextView
                            android:id="@+id/textViewProduct"
                            android:text="ds_product"
                            style="@style/fingerprint_item" />
                    </TableRow>

                </TableLayout>

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>


</FrameLayout>
