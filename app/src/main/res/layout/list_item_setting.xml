<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/textViewSetting"
        android:layout_width="0dp"
        android:layout_weight="1"
        style="@style/listview_item" />

    <TextView
        android:id="@+id/textViewParameter"
        android:layout_width="0dp"
        android:layout_weight="1"
        style="@style/listview_item" />

    <TextView
        android:id="@+id/textViewPreviousParameter"
        android:layout_width="0dp"
        android:layout_weight="1"
        style="@style/listview_item" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        style="@style/listview_item_buttons">

        <Button
            android:id="@+id/actionPreviousParameter"
            android:text="@string/actionPreviousParameter"
            style="@style/listview_item_button" />

        <Button
            android:id="@+id/actionDefaultParameter"
            android:text="@string/actionDefaultParameter"
            style="@style/listview_item_button" />

    </LinearLayout>

</LinearLayout>